#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        int suro=0,ses=0,cnt=0;
 
        for(int i=0; i<s.size(); i++)
        {
            if(s[i]=='1')
            {
                suro=i;
                break;
            }
        }
        for(int i=s.size(); i>=suro; i--)
        {
            if(s[i]=='1')
            {
                ses=i;
                break;
            }
        }
       for(int i=suro; i<ses; i++)
        {
            if(s[i]=='0')
            {
                cnt++;
            }
            else
                continue;
        }
        cout<<cnt<<'\n';
    }
 
    return 0;
}
